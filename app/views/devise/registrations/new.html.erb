<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Sign up</h2>

    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, class: "block text-gray-700 font-medium" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>

      <!--  Agreed_to_terms Field -->
      <div>
        <%= f.label :terms_of_service, class: "flex items-center" do %>
          <%= f.check_box :terms_of_service, class: "form-checkbox h-4 w-4 text-indigo-600 border border-gray-300 rounded focus:ring-indigo-500" %>
          <span class="ml-2 text-gray-700">I agree to the <%= link_to("Terms of Service", class: "text-indigo-600") %></span>
          <% end %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white font-semibold py-2 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <!-- Links (e.g., Log in, Forgot password) -->
    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

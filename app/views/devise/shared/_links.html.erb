<!-- app/views/devise/shared/_links.html.erb -->
<div class="space-y-4 text-center">
  <!-- Login Link -->
  <% if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  <% end %>

  <!-- Sign Up Link -->
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  <% end %>

  <!-- Forgot Password Link -->
  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-800 text-sm" %>
  <% end %>

  <!-- Confirmation Instructions Link -->
  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-800 text-sm" %>
  <% end %>

  <!-- Unlock Instructions Link -->
  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-600 hover:text-gray-800 text-sm" %>
  <% end %>

  <!-- OmniAuth Providers -->
  <% if devise_mapping.omniauthable? %>
    <div class="mt-4 space-y-2">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: false }, class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 font-semibold" %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- app/views/homes/index.html.erb -->
<div class="min-h-screen bg-gray-100 text-gray-800">
<%
=begin 
%>
  <!-- Navbar -->
  <nav class="bg-white shadow">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-indigo-600">Hospital Portal</a>

      <!-- Navbar Links -->
      <div>
        <% if user_signed_in? %>
          <!-- Show if logged in -->
          <span class="mr-4 text-gray-700">Welcome, <%= current_user.email %></span>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "text-white bg-red-500 hover:bg-red-600 py-2 px-4 rounded-lg" %>
        <% else %>
          <!-- Show if not logged in -->
          <%= link_to 'Login', new_user_session_path, class: "text-indigo-600 hover:text-indigo-800 mr-4" %>
          <%= link_to 'Signup', new_user_registration_path, class: "text-white bg-indigo-600 hover:bg-indigo-700 py-2 px-4 rounded-lg" %>
        <% end %>
      </div>
    </div>
  </nav>
<%
=end
%>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-20 text-center">
    <h1 class="font-bold text-5xl text-gray-800 mb-6">Welcome to the Hospital Portal</h1>
    <p class="text-lg text-gray-600 mb-4">Effortlessly manage patient registrations and view patient data.</p>
    <p class="text-sm text-gray-500">Find me in <code>app/views/homes/index.html.erb</code></p>
  </div>
</div>

<div class="mx-auto md:w-2/3 w-full p-6 bg-white shadow-lg rounded-lg">
  <!-- Page Title -->
  <h1 class="font-bold text-4xl text-center mb-6 text-gray-800">Edit Patient</h1>

  <!-- Patient Form -->
  <%= render "form", patient: @patient %>

  <!-- Navigation Links -->
  <div class="mt-6 flex justify-center space-x-4">
    <%= link_to "Show Patient", @patient, class: "py-3 px-5 bg-blue-500 text-white rounded-lg font-medium hover:bg-blue-600 transition-colors" %>
    <%= link_to "Back to Patients", patients_path, class: "py-3 px-5 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors" %>
  </div>
</div>

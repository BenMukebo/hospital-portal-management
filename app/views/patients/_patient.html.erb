<div id="<%= dom_id patient %>" class="p-6 bg-white rounded-lg shadow-md my-5">
  <!-- Avatar Image -->
  <div class="flex items-center space-x-4 mb-5">
    <div class="w-24 h-24 rounded-full overflow-hidden bg-gray-200">
      <img src="<%= patient.avatar_url %>" alt="Avatar" class="w-full h-full object-cover" />
    </div>
    <div>
      <h2 class="text-2xl font-semibold text-gray-700"><%= patient.first_name %> <%= patient.last_name %></h2>
      <p class="text-sm text-gray-500">Patient ID: <%= patient.id %></p>
    </div>
  </div>

  <!-- Personal Information -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-gray-500 font-medium">Phone</p>
      <p class="text-gray-700"><%= patient.phone %></p>
    </div>
    <div>
      <p class="text-gray-500 font-medium">Bio</p>
      <p class="text-gray-700"><%= patient.bio %></p>
    </div>

    <div>
      <p class="text-gray-500 font-medium">Birth Date</p>
      <p class="text-gray-700"><%= patient.birdth_day %></p>
    </div>

    <div>
      <p class="text-gray-500 font-medium">Sex</p>
      <p class="text-gray-700 capitalize"><%= patient.sex %></p>
    </div>

    <div>
      <p class="text-gray-500 font-medium">Marital Status</p>
      <p class="text-gray-700"><%= patient.marital_status.humanize %></p>
    </div>

    <div>
      <p class="text-gray-500 font-medium">Status</p>
      <p class="text-gray-700"><%= patient.status.humanize %></p>
    </div>
  </div>

  <!-- Address Information -->
  <div class="mt-6">
    <h3 class="text-xl font-semibold text-gray-700 mb-3">Address</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="text-gray-500 font-medium">Street</p>
        <p class="text-gray-700"><%= patient.address["street"] %></p>
      </div>
      <div>
        <p class="text-gray-500 font-medium">City</p>
        <p class="text-gray-700"><%= patient.address["city"] %></p>
      </div>
      <div>
        <p class="text-gray-500 font-medium">State</p>
        <p class="text-gray-700"><%= patient.address["state"] %></p>
      </div>
      <div>
        <p class="text-gray-500 font-medium">Country</p>
        <p class="text-gray-700"><%= patient.address["country"] %></p>
      </div>
    </div>
  </div>
</div>
